<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CampusExpense" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Màu chính -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Màu phụ -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Màu status bar -->
        <item name="android:statusBarColor">@color/galaxy_blue</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Font + nền -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Theme không có ActionBar -->
    <style name="Theme.CampusExpense.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar" />
    
    <!-- Overlay cho AppBar nếu bạn dùng Toolbar -->
    <style name="Theme.CampusExpense.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Overlay cho Popup (menu, dialog, spinner...) -->
    <style name="Theme.CampusExpense.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- Theme cho màn hình Login -->
    <style name="Theme.CampusExpense.Login" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/galaxy_blue</item>
        <item name="android:windowBackground">@drawable/gradient_blue_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>
